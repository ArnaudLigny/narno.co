<!DOCTYPE html>
<html lang="en">
{% include 'include/head.html.twig' %}
  <body>
    <div class="container content">
      <header class="masthead">
        <h3 class="masthead-title">
          <a href="{{ site.baseurl }}" title="Home">{{ site.title }}</a>
          <small>{{ site.baseline }}</small>
        </h3>
      </header>
      <main>
        {{ page.section }}
        <ul>
{% for page in site.pages|filterBy('section', 'r')|filterBy('virtual', false)|sortByDate %}
          <li><a href="{{ url(page, true) }}">{{ page.title }}</a></li>
{% endfor %}
        </ul>
      </main>
      <footer class="footer">
        <small>
          &copy; <time datetime="{{ site.time|date('Y-m-dTH:i:sP') }}">{{ site.time|date('Y') }}</time> <a href="https://arnaudligny.fr">Arnaud Ligny</a>
        </small>
      </footer>
    </div>
  </body>
</html>
